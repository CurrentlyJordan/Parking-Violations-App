<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/add_car_textview"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add Car"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/new_car_name_edit_text"
        android:layout_marginTop="20dp"
        android:hint="Type in name of car"
        android:inputType="textImeMultiLine|textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/new_car_licence_edit_text"
        android:layout_marginTop="20dp"
        android:hint="Type in license plate"
        android:inputType="textImeMultiLine|textCapCharacters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/button_shape"
        android:layout_gravity="center"
        android:id="@+id/submit_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="submit"/>

</LinearLayout>